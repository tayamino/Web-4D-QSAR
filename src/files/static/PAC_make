#!/bin/bash
#
# Fitting alternative
#
rm -r $PWD/pconfs
mkdir $PWD/pconfs
echo "   "
echo " Alinhamento LQTA-QSAR independente do receptor. "
echo " Apenas átomos do ligante serão alinhado. "
echo "   "
echo "   "
echo -n " Digite o tempo inicial para alinhamento:  " 
read bg
/usr/local/gromacs_4.0.5/bin/trjconv -b $bg -f md300.trr -s md300.tpr -fit rot+trans -sep -o pconfs/alinha.pdb -nice 0
#
# alinhamento
#
ls pconfs/
echo "   "
echo -n  " Digite o número máximo de frames obtidos:  "
#
read uf
for ((  i = 1 ;  i <= $uf ;  i++  ))
do
/usr/local/gromacs_4.0.5/bin/g_confrms -f1 ../ref/pconfs/prot_ref0.pdb -n1 ../ref/PAC_atoms.ndx -f2 pconfs/alinha$i.pdb -n2 PAC_atoms.ndx -o pconfs/f_ajus_$i.pdb -one -nice 0
done
#
# Remover Solvente
#
echo "   "
echo " Removendo coordenadas do solvente "
echo "   "
for ((  k = 1 ;  k <= $uf ;  k++  ))
do
awk 'match($0," SOL ") == 0 {print $0}' pconfs/f_ajus_$k.pdb > pconfs/sem_SOL_$k.pdb 
done 
#
cat pconfs/sem_SOL*.pdb >  PAC_done.pdb
#
# Converter
#
for ((  m = 1 ;  m <= $uf ;  m++  ))
do
/usr/local/gromacs_4.0.5/bin/editconf -f pconfs/sem_SOL_$m.pdb -o pconfs/gro_$m.gro 
done
#

# Concatenar
#
cat pconfs/gro_*.gro > PAC_done.gro
rm -r pconfs
echo "   "
echo " Pronto: Arquivo de saída PAC_done.gro and .pdb "
echo "   "
